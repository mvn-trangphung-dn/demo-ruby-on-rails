<td><%= gravatar_for user %></td>
<td><%= user.name %></td>
<td><%= user.email %></td>
<td><%= link_to "Show this #{user.name}", user %></td>
<% if current_user.admin? && !current_user?(user) %>
  <td>
    <%= link_to "delete", user, method: :delete,
                                data: { confirm: "You sure?" } %>
  </td>
<% end %>

